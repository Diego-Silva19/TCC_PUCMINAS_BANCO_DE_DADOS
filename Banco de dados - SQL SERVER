create database DUNDER;

use DUNDER;

create table dim_ADVERTISEMENT
(
ADVERT_ID				VARCHAR(5),
ADVERTISEMENT_CHANNEL	VARCHAR(20),

);

create table dim_PAYMENT
(
ORDER_ID				VARCHAR(30),
PAYMENT_TYPE			VARCHAR(20),
PAYMENT_DATE			DATE,
PAYMENT_VALUE			DECIMAL(18,3),

);

create table dim_TRADES
(
TRADE_ID				VARCHAR(10),
REQUESTED_DATE			DATE,
PRODUCT					VARCHAR(200),
REASON					VARCHAR(30),

);

create table dim_RATINGS
(
RATING_ID				VARCHAR(10),
RATING_DATE				DATE,
RATING					NUMERIC(2),

);

create table dim_SHIPPING
(
SHIPPING_ID				VARCHAR(10),
SHIPPING_COST			DECIMAL(18,2),
SHIP_MODE				VARCHAR(15),
SHIP_DATE				DATE,
DELIVERY_DATE			DATE,

);

create table dim_PRODUCT_CATEG
(
PRODUCT_ID				VARCHAR(20),
CATEGORY				VARCHAR(15),
SUBCATEGORY				VARCHAR(11),
PRODUCT_NAME			VARCHAR(200),

);

create table dim_PRODUCT_PRICES
(
ITEMSALE_ID				NUMERIC(10),
PRICE					DECIMAL(18,3),

);

create table dim_CALENDAR
(
DATE_COLUMN				DATE,
MONTH_NUM				NUMERIC,
MONTH_NAME				VARCHAR(10),
MONTH_INITIALS			VARCHAR(3),
DAY_NUM					NUMERIC,
WEEK_DAY				NUMERIC,
WEEK_DAY_NAME			VARCHAR(15),
YEAR_NUM				NUMERIC,

);

create table dim_CUSTOMERS
(
CUSTOMER_ID				VARCHAR(12),
CUSTOMER_NAME			VARCHAR(50),
GENDER					VARCHAR(6),
SEGMENT					VARCHAR(11),
POSTALCODE				NUMERIC,
CITY					VARCHAR(50),
STATE_NAME				VARCHAR(50),
COUNTRY					VARCHAR(50),

);

create table dim_WORLD_MARKET
(
COUNTRY_NAME			VARCHAR(50),
ALPHA2					VARCHAR(2),
ALPHA3					VARCHAR(3),
COUNTRY_CODE			NUMERIC,
ISO						VARCHAR(15),
MARKET					VARCHAR(6),
MARKET_DESCRIPTION		VARCHAR(30),
REGION					VARCHAR(10),
SUBREGION				VARCHAR(35),
INTERMEDIATE_REGION		VARCHAR(20),
REGION_CODE				NUMERIC,
SUBREGION_CODE			NUMERIC,
INTERMED_REGION_CODE	NUMERIC,

);

create table fact_SALES
(
ORDER_ID				VARCHAR(30),
CUSTOMER_ID				VARCHAR(12),
PRODUCT_ID				VARCHAR(20),
ITEMSALE_ID				NUMERIC(10),
SHIPPING_ID				VARCHAR(10),
RATING_ID				VARCHAR(10),
TRADE_ID				VARCHAR(10),
ADVERT_ID				VARCHAR(5),
QUANTITY				NUMERIC,
DISCOUNT				DECIMAL(10,3),
PROFIT					DECIMAL(18,3),
ORDER_DATE				DATE,
ORDER_PRIORITY			VARCHAR(8),
)
